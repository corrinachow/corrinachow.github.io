{
  "editor.tabSize": 2,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.cache": true
  },
  "editor.formatOnPaste": false,

  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.options": {
    "parserOptions": {
      "createDefaultProgram": true
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
